{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/forms/login.css') }}">
{% endblock %}

{% block body %}
    <div class="form-wrapper">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1>Veuillez vous connecter</h1>

            <div class="line">
                <label for="username">Identifiant</label>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control"
                       autocomplete="username" required autofocus>
            </div>

            <div class="line">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control"
                       autocomplete="current-password"
                       required>
            </div>

            <div class="line remember-me">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se souvenir de moi</label>
            </div>

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                   value="{{ csrf_token('authenticate') }}">

            <button class="" type="submit">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}
