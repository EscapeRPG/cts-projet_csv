{% extends 'base.html.twig' %}

{% block title %}Import de fichiers{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/forms/import.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/modals/modals.css') }}">
{% endblock %}

{% block body %}
    <div class="form-wrapper">
        {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
        <h1>Import de fichiers csv</h1>
        <div data-controller="dropzone" class="dropzone">
            {{ form_widget(form.files, {
                attr: {
                    'data-dropzone-target': 'input',
                    'hidden': true
                }
            }) }}

            <div class="dropzone__area" data-dropzone-target="area">
                <p>Déposez vos fichiers ici, ou cliquez pour sélectionner <span class="dropzone__hint">(.csv uniquement)</span></p>
            </div>

            <div class="dropzone__files" data-dropzone-target="files"></div>
        </div>

        {{ form_row(form.import) }}
        {{ form_end(form) }}
    </div>

    {% if errors is not empty %}
        <div class="import-errors">
            <h3>Erreurs détectées</h3>
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {% set successMessages = app.flashes('success') %}

    {% if successMessages is not empty %}
        <div id="modal" class="modal-overlay" data-controller="modals" data-modals-target="overlay">
            <div class="modal" data-modals-target="modal">
                <h2>Succès</h2>

                {% for message in successMessages %}
                    <p>{{ message }}</p>
                {% endfor %}

                <button id="close-modal" data-action="click->modals#hide">OK</button>
            </div>
        </div>
    {% endif %}
{% endblock %}
